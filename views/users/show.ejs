<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head/_head', { page: user.username }) %>

    <body>
        <!-- NAV PARTIAL -->
        <%- include('../partials/navbar/_navbar') %>
        <main>

            <article class="user-queue-index">
                <h1 class="index-header">MY QUEUE</h1>

                <!-- LOOP TO DISPLAY ALL QUEUED SHOWS -->
                <div class="index-boxes-container">
                    <% for (let i = 0; i < user.showQueue.length; i++) { %>
                        <% const queue = user.showQueue[i] %>
                        <div class="index-boxes">
                        <a href="/shows/<%=queue._id%>">
                            <img class="thumbnail" src="<%=queue.image%>">
                            <p><%=queue.name%></p>
                        </a>

                        <form action="/users/<%= user.id %>?_method=PUT" method="POST">
                            <input hidden name="remove" value="<%= queue._id %>" />
                            <button type="submit">Remove from queue</button>
                        
                        </form>
                        </div>
                    <%}%>
                </div>
                </article>

        </main>
    </body>

</html>